extends layout 

block content 
    .w3-card-4
        header.w3-container.w3-red.w3-margin-bottom
            h1= title
            a(href="/filmes")
                h3 Voltar
        form.w3-container(method='post', action=`/filmes/edit/${filme.id}`)
            label Título
            input.w3-input(type='text', name='title', value=filme.title)
            label Ano 
            input.w3-input(type='text', name='year', value=filme.year)
            label Elenco
            input.w3-input(type='text', name='cast', value=filme.cast.join(', '))
            label Géneros
            input.w3-input(type='text', name='genres', value=filme.genres.join(', '))
            button.w3-button.w3-red(type='submit') Editar  
        footer.w3-container.w3-red.w3-margin-top
          address Generated by EngWeb2025 class