extends layout 

block content
    .w3-card-4
        header.w3-container.w3-red.w3-margin-bottom.w3-p
            h1= title
                a.w3-btn.w3-round.w3-white.w3-center(style='margin-left: 40px', href='/alunos/registo') +
        .w3-container
            table.w3-table-all.w3-margin-bottom
                tr
                    th Id
                    th Name
                    th GitHub
                    th Actions
                each student in students
                    tr
                        td= student._id
                        td
                            a(href=`/alunos/${student._id}`)= student.nome
                        td
                            a(href=`${student.git}`)= student.git
                        td
                            a(href=`/alunos/edit/${student._id}`) Edit
                            | 
                            a(href=`/alunos/delete/${student._id}`) Delete