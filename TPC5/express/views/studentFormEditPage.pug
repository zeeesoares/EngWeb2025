extends layout 

block content 
    .w3-card-4 
        header.w3-container.w3-red.w3-margin-bottom 
            h1= title        
        form.w3-container(method="POST") 
            fieldset 
                legend Metadata 
                label Id 
                input.w3-input.w3-round(type="text", name="id", required, value= student._id) 
                label Name 
                input.w3-input.w3-round(type="text", name="nome", required, value= student.nome) 
                label Git 
                input.w3-input.w3-round(type="text", name="git", required, value= student.git) 
            
            fieldset 
                legend TPC 
                - for (var i = 1; i <= 8; i++)
                    - var tpc = 'tpc' + i
                    input.w3-check(type="checkbox", name=tpc, value="true", checked=student[tpc]) 
                    label TPC#{i}

            br 
            button.w3-btn.w3-margin-bottom.w3-red.w3-mb-2(type="submit") Guardar 
