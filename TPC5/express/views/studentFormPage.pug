extends layout 

block content 
    .w3-card-4 
        header.w3-container.w3-red.w3-margin-bottom 
            h1= title        
        form.w3-container(method="POST") 
            fieldset 
                legend Metadata 
                label Id 
                input.w3-input.w3-round(type="text", name="id", required) 
                label Name 
                input.w3-input.w3-round(type="text", name="nome", required) 
                label Git 
                input.w3-input.w3-round(type="text", name="git", required) 
            
            fieldset 
                legend TPC 
                input.w3-check(type="checkbox", name="tpc1", value="true") 
                label TPC1 
                input.w3-check(type="checkbox", name="tpc2", value="true") 
                label TPC2 
                input.w3-check(type="checkbox", name="tpc3", value="true") 
                label TPC3 
                input.w3-check(type="checkbox", name="tpc4", value="true") 
                label TPC4 
                input.w3-check(type="checkbox", name="tpc5", value="true") 
                label TPC5 
                input.w3-check(type="checkbox", name="tpc6", value="true") 
                label TPC6 
                input.w3-check(type="checkbox", name="tpc7", value="true") 
                label TPC7 
                input.w3-check(type="checkbox", name="tpc8", value="true") 
                label TPC8 
            br 
            button.w3-btn.w3-margin-bottom.w3-red.w3-mb-2(type="submit") Register 
    